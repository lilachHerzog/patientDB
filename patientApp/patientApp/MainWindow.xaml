<Window x:Class="patientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patientApp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="אפליקציית מטופלים" Height="450" Width="800" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Header="מטופלים" Grid.Column="0" Margin="0,0,10,0">
            <StackPanel>
                <TextBox x:Name="SearchTextBox" 
                         Margin="0,0,0,5" 
                         TextChanged="SearchTextBox_TextChanged"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         Height="30"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Right"
                         Text="חפש לפי שם או תעודת זהות"
                         Foreground="Gray"
                         GotFocus="SearchTextBox_GotFocus"/>
                <DatePicker x:Name="VisitDatePicker" 
                           SelectedDateChanged="VisitDatePicker_SelectedDateChanged"
                           DisplayDateStart="2000-01-01"
                           DisplayDateEnd="{x:Static sys:DateTime.Now}"
                           VerticalContentAlignment="Center"
                           Height="30"
                           IsTodayHighlighted="True"
                           SelectedDateFormat="Short"
                           FirstDayOfWeek="Sunday"
                           Margin="0,0,0,5">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Foreground" Value="Gray" />
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
                <Button x:Name="ClearDateButton" 
                        Content="נקה תאריך" 
                        Click="ClearDateButton_Click"
                        Margin="0,0,0,5"
                        Height="25"/>
                <ListBox x:Name="PatientsListBox"
                         SelectionChanged="PatientsListBox_SelectionChanged" 
                         Margin="0,5,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" MinWidth="150"/>
                                <TextBlock Text="{Binding Id}" Foreground="Gray" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="ביקורים" Grid.Column="1">
            <DataGrid x:Name="VisitsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="תאריך ביקור">
                        <DataGridTextColumn.Binding>
                            <Binding Path="VisitDate" StringFormat="dd-MM-yyyy HH:mm" />
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="פרטים" Binding="{Binding Description}" />
                    <DataGridTemplateColumn Header="PDF">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="פתח PDF" CommandParameter="{Binding PdfFilePath}" Click="DownloadPdf_Click" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="DOCX">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="פתח DOCX" CommandParameter="{Binding DocFilePath}" Click="DownloadDoc_Click" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
